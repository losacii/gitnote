alias o='open .'
alias s='cd -'
alias a='cd ..'

alias godown='sudo shutdown -h now'
alias restart='sudo shutdown -r now'

alias cdd='cd ~/Documents'
alias cdp='cd ~/Documents/myprojs/Python.Projects/'
alias cdn='cd ~/Downloads'
alias notes='subl ~/Documents/notes/'
alias py='python $*'

