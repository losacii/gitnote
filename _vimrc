" ~/.vimrc
set nu rnu

nnoremap ;fw :w<cr>
nnoremap ;fe :q!<cr>
nnoremap ;ee :qa!<cr>

inoremap ˙ <left>
inoremap ∆ <down>
inoremap ˚ <up>
inoremap ¬ <right>

inoremap ˆ <esc>bi
inoremap ø <esc>ea

inoremap ;u <esc>viwUea
nnoremap ;u viwUe

set tabstop=4
set autoindent

