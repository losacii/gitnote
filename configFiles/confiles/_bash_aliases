alias c='clear'
alias x='exit'

alias sbash='source ~/.bashrc'
alias ebash='nvim ~/.bashrc'
alias szsh='source ~/.zshrc'
alias ezsh='nvim ~/.zshrc'
alias xping='ping -s 16 -c 5 -i 0.3'

alias godown='sudo /sbin/poweroff'
alias reboot='sudo /sbin/reboot'
alias py='python3'

alias a='cd ..'
alias s='cd -'
alias o='pcmanfm . &'
alias cdd='cd ~/Documents'
alias cdg='cd ~/gitnote'
alias note='nvim gitnote/notebook.md'
alias rm='rm -rf'

alias appinstall='sudo apt install'
alias appsearch='sudo apt search'
alias allconfig='cd ~/gitnote/configFiles/confiles/ && nvim'
alias i3config='nvim ~/.config/i3/config'
alias aliconfig='nvim ~/.bash_aliases'

alias clock='tty-clock -x -c'
alias playText='python3 ~/gitnote/Vocabulary/playTexts.py'
alias env='cd ~/dev/env; pipenv shell'

alias fzf='fzf -e'
alias fls='ls | fzf -l 25 -e'
alias fcd='cd $(find . -type d | fzf -e)'
alias fvi='nvim $( find . -type f | fzf -e)'
alias gi='chromium --incognito'

alias v='nvim'
alias v.='nvim .'
alias sv='sudo -E nvim'
alias svn='sudo -E nvim /etc/network/interfaces'
alias fcat='cat $( find . -type f | fzf )'
alias ecommands='nvim Documents/commandss.txt'

alias ga='git add .'
alias gc='git commit -m \"update\"'
alias gp='git push'
alias py3='python3'
alias gitlog='gitlog | less'

alias wifidown='sudo ifdown wlp3s0'
alias wifiup='sudo ifup wlp3s0'
alias gx='startx'
