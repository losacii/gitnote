alias c='clear'
alias x='exit'

alias sbash='source ~/.zshrc'
alias ebash='vi ~/.zshrc'
alias xping='ping -s 16 -c 5 -i 0.3'

alias godown='sudo /sbin/poweroff'
alias reboot='sudo /sbin/reboot'
alias py='python3'

alias a='cd ..'
alias s='cd -'
alias cdd='cd ~/Documents'

alias appinstall='sudo apt install'
alias appsearch='sudo apt search'
alias allconfig='cd ~/Documents/gitnote/configFiles/confiles/ && vim'
alias i3config='vim ~/.config/i3/config'
alias aliconfig='vim ~/.bash_aliases'

alias clock='tty-clock -x -c'
alias playText='python ~/Documents/gitnote/Vocabulary/playTexts.py'

alias fls='ls | fzy -l 25'
alias fcd='cd $(find . -type d | fzy)'
alias fvi='vim $( find . -type f | fzf )'
alias sv='sudo nvim'
alias fcat='cat $( find . -type f | fzf )'

alias ga='git add .'
alias gc='git commit -m \"update\"'
alias gp='git push'
